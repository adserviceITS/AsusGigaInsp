@model AsusGigaInsp.Models.SerialEditModels

@{
    ViewBag.Title = "シリアル情報修正";
}

<h4 class="alert alert-success">@ViewBag.CompleteMSG</h4>

@using (Html.BeginForm())
{
    <div class="form-row" style="margin-top:15px;">
        <div class="col-md-6">
            <div class="row">
                <label for="ID" class="col-form-label-sm col-md-6">ID：@Model.SerialID</label>
                @Html.HiddenFor(model => model.SerialID)
            </div>
            <div class="row">
                <label for="SONo" class="col-form-label-sm col-md-2">SO#</label>
                @Html.TextBoxFor(model => model.SONo, new { @class = "form-control form-control-sm", style = "max-width:200px;margin:2px;", inputmode = "url", placeholder = "SONo" })
                <label class="col invalid-feedback"></label>
            </div>
            <div class="row">
                <label for="SerialNumber" class="col-form-label-sm col-md-2">シリアル</label>
                @Html.TextBoxFor(model => model.SerialNumber, new { @class = "form-control form-control-sm", style = "max-width:200px;margin:2px;", inputmode = "url", placeholder = "SerialNumber" })
                <label class="col invalid-feedback"></label>
            </div>
            <div class="row">
                <div class="form-check" style="padding-left:15px;">
                    <label for="NGFlg" class="form-check-label col-form-label-sm" style="padding-bottom:5px;">NGフラグ</label>
                    @Html.CheckBoxFor(
                        model => model.NGFlg,  // プロパティ
                        new { @class="form-check-input", style="margin-left:20px;margin-top:9px;" }      // その他の属性
                    )
                </div>
            </div>
            <div class="row">
                @Html.TextAreaFor(model => model.NGReason, 8, 100, new { @class = "form-control form-control-sm", style = "max-width:400px; margin-left:15px;", placeholder = "NG理由" })
                <label class="col invalid-feedback"></label>
            </div>
            <div class="row" style="margin-top:15px;">
                <label for="Instruction" class="col-form-label-sm col-md-3">ASUS様指示</label>
                @Html.DropDownListFor(
                    model => model.Instruction, // プロパティ
                    new SelectList(Model.DropDownListInstruction, "InstructionID", "Instruction"),
                    "",
                    new { @class= "form-control form-control-sm", style="max-width:120px;" }
                )
            </div>
            <div class="row">
                <label for="DescriptionAds" class="col-form-label-sm col-md-2" style="margin-bottom:initial;">備考</label>
            </div>
            <div class="row">
                @Html.TextAreaFor(model => model.DescriptionAds, 8, 100, new { @class = "form-control form-control-sm", style = "max-width:400px;margin-left:15px", placeholder = "備考" })
                <label class="col invalid-feedback"></label>
            </div>
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>
            <div class="col-md-10" style="margin-top:10px;">
                <div class="row">
                    @Html.ActionLink("戻る", "BackSerialList", "SerialList", new { @class = "btn btn-danger btn" ,style = "margin:5px;" })
                    <button class="btn btn-danger btn" formaction="/SerialList/Delete" name="DeleteBtn" id="DeleteBtn" style="margin:5px;">削除</button>
                    <button class="btn btn-danger btn" formaction="/SerialList/EditEntry" name="EditEntryBtn" id="EditEntryBtn" style="margin:5px;">登録</button>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row border">
                <label class="col-form-label-sm border" style="width:60px;">登録日</label>
                <label class="col-form-label-sm border" style="width:180px;">@Model.INSERT_DATE</label>
                <label class="col-form-label-sm border" style="width:60px;">登録者</label>
                <label class="col-form-label-sm border" style="width:150px;">@Model.INSERT_NAME</label>
            </div>
            <div class="row border">
                <label class="col-form-label-sm border" style="width:60px;">更新日</label>
                <label class="col-form-label-sm border" style="width:180px;">@Model.UPDATE_DATE</label>
                <label class="col-form-label-sm border" style="width:60px;">更新者</label>
                <label class="col-form-label-sm border" style="width:150px;">@Model.UPDATE_NAME</label>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {


    });
</script>
